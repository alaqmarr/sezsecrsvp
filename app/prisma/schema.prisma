generator client {
  provider = "prisma-client-js"
  output   = "../app/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RSVPDay {
  id        String   @id @default(cuid())
  date      DateTime
  lunch     Boolean
  dinner    Boolean
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  rsvps     RSVP[]
}

model RSVP {
  id        String   @id @default(cuid())
  name      String
  number    String
  field     String
  lunch     Boolean
  dinner    Boolean
  rsvpDayId String
  rsvpDay   RSVPDay  @relation(fields: [rsvpDayId], references: [id])
  deviceId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id       String @id @default(cuid())
  username String @unique
  password String
}
